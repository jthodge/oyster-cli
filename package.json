{
  "name": "oyster-cli",
  "version": "1.0.0",
  "description": "An example CLI for ordering oysters",
  "main": "./lib/index.js",
  "bin": {
    "oyster": "./lib.index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "test": "sudo npm i -g && oyster",
    "refresh": "rm ./node-modules ./package-lock.json && npm install"
  },
  "author": "Taylor Hodge",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "commander": "^2.20.0",
    "figlet": "^1.2.3",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/node": "^12.6.8",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
